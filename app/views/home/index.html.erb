<nav id="mainNav" class="navbar navbar-default">
  <div class="container-fluid">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand page-scroll" href="http://www.watchape.com">Watch Ape</a>
      <div class="pull-right display-table" style="height: 50px;">
        <div class="table-cell">
          <a href="/" class="btn btn-primary" id="start-over">Start over</a>
        </div>
      </div>
    </div>

  </div>
</nav>

<header>
  <div class="header-content">
    <div class="header-content-inner">

      <div class="page" id="page1">
        <h1>Smartwatch Picker</h1>
        <hr>
        <p>
          Get the perfect smartwatch for you.
        </p>
        <button class="btn btn-primary btn-xl page-scroll" id="button1">
          Get Started
        </button>
        <div>
          <%= image_tag('logo-large.png', class: 'logo') %>
        </div>
      </div>

      <div class="page" id="page2">
        <h1>What kind of phone do you have?</h1>

        <div class="funkyradio">
          <div class="funkyradio-success">
            <input type="radio" value="Android" name="radio" id="radio1"/>
            <label for="radio1">Android</label>
          </div>

          <div class="funkyradio-success">
            <input type="radio" value="iOS" name="radio" id="radio2"/>
            <label for="radio2">iOS</label>
          </div>

          <div class="funkyradio-success">
            <input type="radio" value="Windows" name="radio" id="radio3"/>
            <label for="radio3">Windows</label>
          </div>
        </div>
        <button class="btn btn-primary btn-xl page-scroll button-margin" id="button2">
          Next
        </button>
      </div>

      <div class="page" id="page3">
        <h1>How long should the battery last?</h1>
        <p class="slider-text">
          <span id="battery-life-amount"></span>
        </p>

        <div id="battery-slider" class="slider"></div>

        <button class="btn btn-primary btn-xl page-scroll button-margin" id="button3">
          Next
        </button>
      </div>

      <div class="page" id="page4">
        <h1>What is your budget?</h1>

        <p class="slider-text">
          <span id="price-amount"></span>
        </p>

        <div id="price-slider" class="slider"></div>

        <button class="btn btn-primary btn-xl page-scroll button-margin" id="button4">
          Finish
        </button>
      </div>

      <div class="page" id="page5">
        <h1>Here are your results</h1>
      </div>

    </div>
  </div>
</header>

<div id="smartwatches" class="smartwatches-closed">
  <div id="smartwatch-top-bar">
    <div id="smartwatch-count"></div>
    <div id="smartwatch-arrow">
      <i class="fa fa-arrow-up touch-target"></i>
    </div>
    <div class="clearfix"></div>
  </div>

  <div id="smartwatch-content">
    <h2>Smartwatches sorted by <em class="orange">awesomeness</em></h2>
    <div id='smartwatch-list'>

    </div>
    <div class="clearfix"></div>
  </div>
</div>

